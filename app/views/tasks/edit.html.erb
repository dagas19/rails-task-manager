<div class="container">
  <div class="col-xs-12">
    <%= form_for(@task) do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div >
        <%= f.label :details %>
        <%= f.text_field :details%>
      </div>

      <div>
        <%= f.check_box :completed%>
        Completion status
      </div>

      <%= f.submit%>
    <% end %>

    <div >
      <%= link_to tasks_path do %>
        <i class="fa fa-undo"> Back to checklist</i>
      <% end %>

    </div>
  </div>
</div>
